CREATE TABLE aula5_mvc;
USE aula5_mvc;
CREATE TABLE NOTICIAS (
	id_noticia int PRIMARY KEY AUTO_INCREMENT,
    titulo varchar(100),
    nome_imagem varchar(50),
    texto varchar(5000)
);

